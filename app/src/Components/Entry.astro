<article class=`entries ${aspectRatio}`>
  <img loading="lazy" class="entries__bg" src={src} alt={alt} />
  <h3 class="entries__h3">{title}</h3>
  <a href={`/artists/${url}/`}>
    <img class="entries__link" src="/icons/music.avif" alt="music icon" />
  </a>
</article>

<style lang="scss">
  .entries {
    font-size: 90%;
    position: relative;
    overflow: hidden;
    flex-direction: column;
    border-radius: 1rem;

    &__bg {
      height: 100%;
      object-fit: cover;
      aspect-ratio: 1;
      width: 25em;
      @media (min-width: 40em) {
        aspect-ratio: 4/2;
      }
    }
    &__link {
      background-color: var(--purple);
      position: absolute;
      inset: auto 5px 5px auto;
      border-radius: 50%;
      width: 4.2rem;
      padding: 0.5rem;
      object-fit: cover;
      outline: 1rem solid var(--Dark-blue);
      &:hover {
        transform: scale(1.1);
      }
    }
    &__h3 {
      position: absolute;
      inset: 0.5rem auto auto 0;
      font-size: clamp(1em, calc(1em + 1vw), 2em);
      color: hsl(0, 0%, 100%);
      background-color: var(--Dark-blue);
      outline: 8px solid var(--Dark-blue);
      transition: all 0.23s ease-in-out;
      border-radius: 0 0 0.5rem 0;
    }
  }
