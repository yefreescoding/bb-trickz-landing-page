<section
  class="intro section"
  aria-label="Important information about the page"
>
  <div class="intro__images">
    <slot name="images" />
  </div>
  <div class="intro__text">
    <slot name="text" />
  </div>
</section>

<style lang="scss" is:global>
  .intro {
    gap: 1rem;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    isolation: isolate;

    &__images,
    &__text,
    &__article {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    &__images {
      flex-basis: 20em;
      flex-grow: 1;
    }
    img {
      object-fit: cover;
      object-position: center;
      border-radius: 1rem;
      aspect-ratio: 1;
    }
    &__text {
      flex-basis: 20em;
      flex-grow: 1;
      position: sticky;
      top: 0;
      height: fit-content;
      padding: 2vh 2vw;
      overflow: hidden;
      border-radius: 1rem;
      // background-color: var(--Very-dark-desaturated-blue);
      @media (width > 40em) {
        &::after {
          content: 'VIBES';
          position: absolute;
          writing-mode: vertical-rl;
          text-orientation: sideways;
          transform: rotate(180deg);
          inset: 0 0 0 auto;
          font-size: 11.875rem;
          font-weight: 600;
          opacity: 0.3;
          z-index: -1;
          color: gray;
        }
      }
    }
    &__article {
      padding-right: 8vw;
    }
  }
</style>
