---
import Navigation from './Navigation.astro';
---

<header id="home" class="flex header">
  <div class="header__logo">
    <a href="/" class="header__logo--letters">
      <img
        class="header__logo--image"
        src="/logos/music.png"
        alt="Logo de la pagina"
      />
    </a>
  </div>
  <Navigation />
  <p class="header__p">
    <span> Yefree Valdez</span>
    <small>copyright &copy; all right reserved</small>
  </p>
  <!-- <button class="header__toggle"></button> -->
</header>

<style lang="scss" is:global>
  @use '../assets/scss/util/' as *;

  .header {
    flex-direction: column;
    position: fixed;
    inset: 0 auto 0 0;
    background-color: var(--Dark-blue);
    z-index: 999;
    width: 15rem;
    padding: 1rem;
    @media (width < 39.9em) {
      position: relative;
      height: fit-content;
    }
    a {
      color: var(--Dark-moderate-cyan);
      font-size: clamp(0.9rem, calc(0.75rem + 1vw), 1.6rem);
      text-transform: uppercase;
      &:hover {
        color: gray;
        transform: scale(1.1, 1.1);
      }
    }

    &__logo,
    &__p {
      display: flex;
      flex-flow: column;
      flex: 1;
      gap: 1rem;
    }
    &__logo {
      display: flex;
      &--image {
        width: em(30);
        border-radius: 50%;
      }
      &--letters {
        font-size: 1.3rem;
      }
    }
  }

  .header__p {
    @media (max-width: 35em) {
      display: none;
    }
  }
</style>

