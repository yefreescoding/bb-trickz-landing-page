    //   border: 1.5px solid transparent;

    //   cursor: pointer;
    //   @include breakpoint(medium) {
    //     display: none;
    //   }
    // }
  }

  .header__p {
    @media (max-width: 35em) {
      display: none;
    }
  }
</style>

