---
import Navigation from './Navigation.astro';
---

<header id="home" class="flex header">
  <div class="header__logo">
    <a href="/" class="header__logo--letters">Home</a>
    <img
      class="header__logo--image"
      src="/logos/music.png"
      alt="Logo de la pagina"
    />
  </div>
  <Navigation />
  <p class="header__p">
    Get ready to groove with the hottest beats, freshest talent, and coolest
    vibes! Your ultimate destination for the latest music, emerging artists, and
    juicy articles.
  </p>
  <!-- <button class="header__toggle"></button> -->
</header>

<style lang="scss" is:global>
  @use '../assets/scss/util/' as *;

  .header {
    padding: 0 1rem;
    font-weight: 400;
    flex-wrap: wrap;
    gap: 1.5rem;

    a {
      color: var(--Dark-moderate-cyan);
      &:hover {
        color: gray;
        transform: scale(1.1, 1.1);
      }
    }

    &__logo,
    &__nav,
    &__p {
      flex-basis: 15em;
      flex-grow: 1;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      @media (min-width: 35em) {
        border-left: 1px solid var(--Dark-moderate-cyan);
        padding: 0.5rem 1rem;
        align-items: start;
        flex-direction: column;
      }
    }
    &__logo {
      display: flex;
      &--image {
        width: em(50);
        border-radius: 50%;
      }
      &--letters {
        font-size: 1.3rem;
      }
    }
    // &__toggle {
    //   width: rem(32);
